<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RegistrationForm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baby_blue_light</item>
        <item name="colorPrimaryVariant">@color/baby_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="radioButtonStyle">@style/Widget.Registration.CompoundButton.RadioButton</item>
        <item name="switchStyle">@style/Widget.Registration.CompoundButton.Switch</item>
    </style>
    <!---->
    <style name="customButton"  parent="Widget.AppCompat.Button">
        <item name="android:shape">rectangle</item>
        <item name="cornerRadius">15dp</item>
        <item name="color">#AEB9CD</item>
    </style>
</resources>